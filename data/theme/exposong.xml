<?xml version='1.0' encoding='UTF-8'?>
<theme>
    <meta>
        <title>ExpoSong</title>
        <author>Brad Landis</author>
        <themeurl>http://exposong.org</themeurl>
        <copyright>ExpoSong Logo: &#169; 2010 The ExpoSong Team</copyright>
    </meta>
    <background>
        <gradient angle='0' x1='0.0' x2='1.0' y1='0.0' y2='0.845'>
            <point color='#777' stop='0.0' />
            <point color='#ccc' stop='0.2' />
            <point color='#fff' stop='1.0' />
        </gradient>
        <gradient angle='90' x1='0.0' x2='1.0' y1='0.0' y2='0.845'>
            <point color='#ccc' stop='0.0' opacity='0.7' />
            <point color='#fff' stop='0.5' opacity='0.3' />
            <point color='#ccc' stop='1.0' opacity='0.7' />
        </gradient>
        <solid color='#fa1' x1='0.0' x2='1.0' y1='0.845' y2='1.0' />
        <solid color='#000' x1='0.0' x2='1.0' y1='0.84' y2='0.85' />
        <image src='exposong.png' x1='0.8' x2='0.99' y1='0.86' y2='0.99' aspect='fit' />
    </background>
    <sections>
        <body font='Verdana 48' x1='0.0' x2='1.0' y1='0.0' y2='0.85'>
            <text color='#000' />
            <shadow color='#fff' opacity='0.5' offsetx='.1' offsety='.1' />
        </body>
        <footer font='Arial 10' x1='0.0' x2='1.0' y1='0.85' y2='1.0'>
            <text color='#fff' />
            <shadow color='#000' opacity='0.8' offsetx='.1' offsety='.1' />
        </footer>
    </sections>
</theme>
